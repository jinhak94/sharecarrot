<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="transactionhistory">
	
	<select id= "selectBuyer" resultMap="memberMap">
		select profile_renamed, member_id
		 from member
		where member_Id in (
		select member_Id
		from transaction_history
		where product_id=#{productId})
	</select>

	<resultMap type="TransactionHistory" id="TransactionHistoryMap">
		<id column="product_id" property="productId"/>
			<result column="review_yn" property="reviewYn"/>
			<result column="shop_id" property="shopId"/>
			<result column="member_id" property="memberId"/>
	</resultMap>
	
	<resultMap type="member" id="memberMap">
		<id column="member_id" property="memberId"/>
		<result column="member_password" property="memberPassword"/>
		<result column="member_name" property="memberName"/>
		<result column="birthday" property="birthday"/>
		<result column="email" property="email"/>
		<result column="phone" property="phone"/>
		<result column="member_enroll_date" property="memberEnrollDate"/>
		<result column="enabled" property="enabled"/>
	</resultMap>
</mapper>