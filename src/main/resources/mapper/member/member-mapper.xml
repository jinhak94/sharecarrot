<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<select id="selectOneMember" resultMap="memberMap">
		select *
		from member m
			left join authorities a
				on m.id = a.id
		where m.memberid = #{id}
		</select>
</mapper>